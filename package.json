    "lint": "eslint --cache .",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "garmin",
    "peloton",
    "tcx"
  ],
  "dependencies": {
    "dotenv": "^8.2.0",
    "lodash": "^4.17.20",
    "node-fetch": "^2.6.1",
    "rimraf": "^3.0.2",
    "xmlbuilder": "^15.1.1",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.11.2",
    "@types/node-fetch": "^2.5.7",
    "@types/yargs": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
