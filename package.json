{
  "name": "peloton-to-tcx",
  "author": "Andy Brown <asbrown002@gmail.com>",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Converts Peloton tread workouts into Garmin compatible TCX files.",
  "bin": "./lib/peloton-to-tcx.js",
  "files": [
    "lib",
    "readme.md"
  ],
  "scripts": {
